<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryVariant"
        app:title="@string/main_title"
        app:titleTextColor="?attr/colorOnPrimary"
        app:titleCentered="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- SDK 状态卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sdk_status"
                    android:textAppearance="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/statusIndicator"
                        style="@style/StatusIndicator"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvSdkStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_not_configured"
                        android:textAppearance="@style/TextBody" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSdkVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDK Version: 1.0.0"
                    android:textAppearance="@style/TextCaption"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 设备信息卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_info"
                    android:textAppearance="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDeviceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备信息加载中..."
                    android:textAppearance="@style/TextBody"
                    android:textIsSelectable="true" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 推送服务状态卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推送服务状态"
                    android:textAppearance="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvVendorInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备厂商信息加载中..."
                    android:textAppearance="@style/TextBody"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSupportedServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支持的推送服务加载中..."
                    android:textAppearance="@style/TextCaption" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Token 信息卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推送 Token"
                    android:textAppearance="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <!-- 推送 Token -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="推送 Token"
                        android:textAppearance="@style/TextBody" />

                    <Button
                        android:id="@+id/btnCopyToken"
                        style="@style/ButtonSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_copy"
                        android:layout_margin="0dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPushToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token 未获取"
                    android:textAppearance="@style/TextCaption"
                    android:textIsSelectable="true"
                    android:layout_marginBottom="12dp"
                    android:maxLines="3"
                    android:ellipsize="middle" />

                <TextView
                    android:id="@+id/tvTokenType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextCaption"
                    android:textColor="@android:color/tertiary_text_light"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 操作按钮区域 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/push_registration"
                    android:textAppearance="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnConfigureSdk"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_configure_sdk" />

                <Button
                    android:id="@+id/btnRegisterPush"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_register_push" />

                <Button
                    android:id="@+id/btnGetPushToken"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="获取推送 Token" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnTestConnection"
                        style="@style/ButtonSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/btn_test_connection"
                        android:layout_margin="0dp" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnClearCache"
                        style="@style/ButtonSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/btn_clear_cache"
                        android:layout_margin="0dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 导航按钮区域 -->
        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnViewHistory"
                    style="@style/ButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_view_history"
                    android:drawableStart="@drawable/ic_push_notification"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btnSettings"
                    style="@style/ButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings" />

                <!-- 角标测试按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnSetBadge"
                        style="@style/ButtonSecondary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="设置角标"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnClearBadge"
                        style="@style/ButtonSecondary" 
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="清除角标"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 状态信息显示区域 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatusInfo"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvStatusInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAppearance="@style/TextCaption"
                android:textIsSelectable="true"
                android:background="?attr/colorSurface" />

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
